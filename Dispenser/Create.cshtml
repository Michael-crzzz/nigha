@model Dashboard.Models.Dispenser

@{
    ViewData["Title"] = "Create Dispenser";
}

<div class="container-fluid hospital-ui-container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card hospital-card shadow-sm">
                <div class="card-header hospital-card-header">
                    <h2 class="mb-0"><i class="fas fa-pump-medical me-2"></i>Create New Dispenser</h2>
                </div>

                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger hospital-alert">
                            <i class="fas fa-exclamation-circle me-2"></i>@TempData["Error"]
                        </div>
                    }

                    <form asp-action="Create" method="post" class="needs-validation" novalidate>
                        <div class="form-group mb-4">
                            <label asp-for="DispenserID" class="form-label hospital-label">
                                <i class="fas fa-barcode me-2"></i>Dispenser ID
                            </label>
                            <div class="input-group">
                                <span class="input-group-text hospital-input-group-text">
                                    <i class="fas fa-tag"></i>
                                </span>
                                <input asp-for="DispenserID" class="form-control hospital-input" id="dispenserIdInput" placeholder="Enter dispenser ID (e.g., ER-001)" required />
                            </div>
                            <span asp-validation-for="DispenserID" class="text-danger hospital-error"></span>
                            <small class="form-text text-muted hospital-hint">Format: UnitCode-Number (e.g., ER-001)</small>
                        </div>

                        <div class="form-group mb-4">
                            <label asp-for="Location" class="form-label hospital-label">
                                <i class="fas fa-map-marker-alt me-2"></i>Location
                            </label>
                            <div class="input-group">
                                <span class="input-group-text hospital-input-group-text">
                                    <i class="fas fa-location-dot"></i>
                                </span>
                                <input asp-for="Location" class="form-control hospital-input" placeholder="Enter dispenser location" required />
                            </div>
                            <span asp-validation-for="Location" class="text-danger hospital-error"></span>
                        </div>

                        <div class="form-group mb-4">
                            <label class="form-label hospital-label">
                                <i class="fas fa-building me-2"></i>Unit
                            </label>
                            <div class="input-group">
                                <span class="input-group-text hospital-input-group-text">
                                    <i class="fas fa-hospital"></i>
                                </span>
                                <input class="form-control hospital-input" id="unitDisplay" readonly />
                            </div>
                            <input type="hidden" asp-for="UnitID" id="unitIdInput" />
                            <span asp-validation-for="UnitID" class="text-danger hospital-error"></span>
                            <small class="form-text text-muted hospital-hint">Automatically detected from Dispenser ID prefix</small>
                        </div>

                        <input type="hidden" asp-for="IsActive" value="true" />

                        <div class="form-group mb-4">
                            <label class="form-label hospital-label">
                                <i class="fas fa-calendar-plus me-2"></i>Date Added
                            </label>
                            <div class="input-group">
                                <span class="input-group-text hospital-input-group-text">
                                    <i class="fas fa-clock"></i>
                                </span>
                                <input class="form-control hospital-input" value="@DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss")" readonly />
                            </div>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn hospital-btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>Submit Dispenser
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        :root {
            --hospital-primary: #1a6fc9;
            --hospital-primary-light: #e1f0ff;
            --hospital-primary-dark: #0d4b8a;
            --hospital-secondary: #f8f9fa;
            --hospital-accent: #5cb3ff;
            --hospital-text: #2d3e50;
            --hospital-border: #d1e3f6;
        }

        body {
            background-color: #f5f9ff;
            color: var(--hospital-text);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .hospital-ui-container {
            padding: 2rem 0;
        }

        .hospital-card {
            border-radius: 10px;
            border: 1px solid var(--hospital-border);
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

            .hospital-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 10px 20px rgba(26, 111, 201, 0.1);
            }

        .hospital-card-header {
            background: linear-gradient(135deg, var(--hospital-primary), var(--hospital-primary-dark));
            color: white;
            padding: 1.5rem;
            border-bottom: none;
        }

        .hospital-label {
            font-weight: 600;
            color: var(--hospital-primary-dark);
            margin-bottom: 0.5rem;
        }

        .hospital-input {
            border: 1px solid var(--hospital-border);
            border-radius: 0 5px 5px 0 !important;
            padding: 0.75rem 1rem;
            transition: border-color 0.3s ease;
        }

            .hospital-input:focus {
                border-color: var(--hospital-accent);
                box-shadow: 0 0 0 0.25rem rgba(26, 111, 201, 0.15);
            }

        .hospital-input-group-text {
            background-color: var(--hospital-primary-light);
            border: 1px solid var(--hospital-border);
            border-right: none;
            color: var(--hospital-primary);
            border-radius: 5px 0 0 5px !important;
        }

        .hospital-btn-primary {
            background-color: var(--hospital-primary);
            border: none;
            padding: 0.75rem;
            font-weight: 600;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
        }

            .hospital-btn-primary:hover {
                background-color: var(--hospital-primary-dark);
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(26, 111, 201, 0.2);
            }

        .hospital-alert {
            border-radius: 8px;
            border-left: 4px solid #dc3545;
            padding: 1rem 1.25rem;
        }

        .hospital-error {
            font-size: 0.85rem;
            margin-top: 0.25rem;
            display: block;
        }

        .hospital-hint {
            font-size: 0.8rem;
            margin-top: 0.25rem;
            font-style: italic;
        }

        .fa-icon-spacing {
            margin-right: 8px;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const dispenserInput = document.getElementById("dispenserIdInput");
            const unitDisplay = document.getElementById("unitDisplay");
            const unitIdInput = document.getElementById("unitIdInput");

            // This is the map passed from controller: [{ UnitID: 1, UnitName: 'ER' }, ...]
            const unitMap = @Html.Raw(ViewBag.UnitMap);

            dispenserInput.addEventListener("input", function () {
                const value = dispenserInput.value.trim();
                const prefix = value.split("-")[0].toUpperCase();

                const match = unitMap.find(u => u.UnitName === prefix);
                if (match) {
                    unitDisplay.value = match.UnitName;
                    unitIdInput.value = match.UnitID;
                } else {
                    unitDisplay.value = "";
                    unitIdInput.value = "";
                }
            });

            // Form validation styling
            const forms = document.querySelectorAll('.needs-validation');
            Array.prototype.slice.call(forms).forEach(function (form) {
                form.addEventListener('submit', function (event) {
                    if (!form.checkValidity()) {
                        event.preventDefault();
                        event.stopPropagation();
                    }
                    form.classList.add('was-validated');
                }, false);
            });
        });
    </script>
}